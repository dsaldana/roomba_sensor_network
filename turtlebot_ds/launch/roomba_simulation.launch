			<param name="expand" value="false"/>
            <!--<param name="graphic_debug" value="$(arg graphic_debug)"/>-->
	  	</node>


    <!--Robots -->
    <include file="$(find turtlebot_ds)/launch/single_robot.launch">
        <arg name="robot_id" value="Robot1"/>
        <arg name="graphic_debug" value="True"/>
        <arg name="robot_pose" value="-x 2.8 -y 2.8 -z 0"/>
    </include>

